<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.christian">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!--SunriseSunset sets DarkMode-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name=".ChristianApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/my_backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Christian">
        <activity
            android:name=".nav.NavActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout|smallestScreenSize"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- https://developer.android.com/studio/write/app-link-indexing -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.christian.com"
                    android:pathPrefix="/recipe"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".navdetail.NavDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout|smallestScreenSize"
            android:label=""
            android:launchMode="singleTop"
            android:parentActivityName=".nav.NavActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".nav.NavActivity" />
        </activity>
        <activity
            android:name="com.christian.navdetail.me.SignInActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".nav.NavActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.christian.nav.NavActivity" />
        </activity>
        <activity
            android:name=".nav.disciple.SignInActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".nav.NavActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.christian.nav.NavActivity" />
        </activity>
        <activity android:name=".navdetail.me.AboutActivity" />
    </application>

</manifest>