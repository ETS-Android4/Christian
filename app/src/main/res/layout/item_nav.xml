<?xml version="1.0" encoding="utf-8"?>
<com.christian.view.CustomCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/custom_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackgroundBorderless"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_nav"
            android:layout_width="0dp"
            android:layout_height="@dimen/app_bar_height"
            android:background="@color/gray_background"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_subtitle_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/search_margin_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingEnd="@dimen/card_view_padding"
            android:paddingStart="@dimen/card_view_padding"
            tool:text="属灵人小传选集"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/text_color_secondary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_nav" />

        <TextView
            android:id="@+id/tv_title_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/search_margin_horizontal"
            android:maxLines="1"
            android:paddingEnd="@dimen/card_view_padding"
            android:paddingStart="@dimen/card_view_padding"
            tool:text="简介"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="?android:attr/textColorPrimaryNoDisable"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_nav" />

        <TextView
            android:id="@+id/tv_detail_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.6"
            android:maxLines="3"
            android:paddingEnd="@dimen/card_view_padding"
            android:paddingStart="@dimen/card_view_padding"
            android:paddingBottom="@dimen/search_margin_horizontal"
            android:paddingTop="@dimen/search_margin_horizontal"
            tool:text="「从前引导你们、传神之道给你们的人，你们要想念他们，效法他们的信心，留心看他们为人的结局。」（希伯来书十三章七节）本书收集一些历代"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/text_color_tertiary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_nav"
            app:layout_constraintVertical_bias="0.0" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/more_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/search_margin_horizontal"
            android:tint="@color/text_color_tertiary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title_nav"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_nav"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_more_vert_black_24dp" />
    </android.support.constraint.ConstraintLayout>
</com.christian.view.CustomCardView>