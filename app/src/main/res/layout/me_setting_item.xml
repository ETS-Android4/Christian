<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_img_wrapper"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height_large"
    android:background="?selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true"
    tools:showIn="@layout/me_frag">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/settings_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/card_view_padding"
        android:layout_marginStart="@dimen/card_view_padding"
        android:contentDescription="@string/download"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_brightness_3_black_24dp" />

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/settings_img"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/text_color_tertiary"
        android:layout_toRightOf="@id/settings_img" />

    <Switch
        android:layout_marginEnd="@dimen/search_margin_horizontal"
        android:layout_marginStart="@dimen/search_margin_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
