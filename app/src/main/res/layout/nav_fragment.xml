<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_nav_frag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="@dimen/search_box_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/bv_tabs_nav"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:outlineProvider="bounds"
            app:blurOverlayColor="@color/colorOverlay"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="lollipop">

            <android.support.design.widget.TabLayout
                android:id="@+id/tl_nav"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:tabIndicatorColor="@color/colorPrimary"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/colorPrimary" />
        </eightbitlab.com.blurview.BlurView>
    </android.support.v7.widget.CardView>

    <com.christian.view.ContextMenuRecyclerView
        android:id="@+id/rv_nav"
        android:overScrollMode="never"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="@dimen/search_bottom_margin" />
</android.support.constraint.ConstraintLayout>