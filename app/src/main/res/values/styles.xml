<resources>

    <!-- settingChristian.Button.White theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--set the right in/out animation of Activity,you can change this to yours-->
        <item name="android:windowAnimationStyle">@style/Animation_Right</item>
    </style>

    <style name="Animation_Right" >
        <item name="android:activityOpenEnterAnimation">@anim/pl_slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/pl_slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/pl_slide_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/pl_slide_out_to_right</item>
    </style>

    <!-- Base application theme. -->
    <style name="Christian" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--set the right in/out animation of Activity,you can change this to yours-->
        <item name="android:windowAnimationStyle">@style/Animation_Right</item>
        <item name="my_custom_attr">@color/default_background_nav</item>
        <item name="my_custom_attr2">@color/white</item>
        <item name="my_custom_attr3">@color/colorOverlay</item>
    </style>

    <style name="ChristianDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--set the right in/out animation of Activity,you can change this to yours-->
        <item name="android:windowAnimationStyle">@style/Animation_Right</item>
        <item name="my_custom_attr">@color/text_color_primary</item>
        <item name="my_custom_attr2">@color/background_material_dark</item>
        <item name="my_custom_attr3">@color/fui_transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ChristianToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="ChristianToolbarTheme.colorPrimary" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!--TextInputLayout-->
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="colorControlNormal">@color/gray_light</item>
    </style>

    <style name="Christian.Button.White" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="Christian.Button.colorPrimary" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Christian.Button.colorAccent" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Christian.Button.colorGrayDark" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/gray_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Christian.Search" parent="Christian">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="autoCompleteTextViewStyle">@style/Christian.AutoCompleteTextView</item>
        <item name="searchViewStyle">@style/Christian.SearchView</item>
        <item name="colorControlNormal">@color/gray_light</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="Christian.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
    </style>

    <style name="Christian.AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColorHint">@color/gray_light</item>
        <!-- If set to @null the cursor will be displayed using android:textColor -->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="SearchViewTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="colorControlNormal">@color/text_color_tertiary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="Christian.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Christian.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
