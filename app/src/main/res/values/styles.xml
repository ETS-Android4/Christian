<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">


    <!-- settingChristian.Button.White theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--set the right in/out animation of Activity,you can change this to yours-->
        <item name="android:windowAnimationStyle">@style/Animation_Right</item>
    </style>

    <style name="Animation_Right" >
        <item name="android:activityOpenEnterAnimation">@anim/pl_slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/pl_slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/pl_slide_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/pl_slide_out_to_right</item>
    </style>

    <!-- Base application theme. -->
    <style name="Christian" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--set the right in/out animation of Activity,you can change this to yours-->
        <item name="android:windowAnimationStyle">@style/Animation_Right</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ChristianToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="ChristianToolbarTheme.colorPrimary" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!--TextInputLayout-->
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="colorControlNormal">@color/gray_light</item>
    </style>

    <style name="Christian.Button.White" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="Christian.Button.colorPrimary" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Christian.Button.colorAccent" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Christian.Button.colorGrayDark" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/gray_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Christian.Search" parent="Christian">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="autoCompleteTextViewStyle">@style/Christian.AutoCompleteTextView</item>
        <item name="searchViewStyle">@style/Christian.SearchView</item>
        <item name="colorControlNormal">@color/gray_light</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="Christian.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
    </style>

    <style name="Christian.AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColorHint">@color/gray_light</item>
        <!-- If set to @null the cursor will be displayed using android:textColor -->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="SearchViewTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="colorControlNormal">@color/text_color_tertiary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="Christian.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Christian.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AboutPage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AboutPage.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AboutPage.Header"/>

    <style name="AboutPage.Header.ToolbarTitleExpanded"
        parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="AboutPage.Header.Icon">
        <item name="android:layout_width">92dp</item>
        <item name="android:layout_height">92dp</item>
    </style>

    <style name="AboutPage.Header.Slogan">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="AboutPage.Header.Version">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AboutPage.Item.Category">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">@dimen/about_page_item_category_padding_horizontal</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingStart">@dimen/about_page_item_category_padding_horizontal</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AboutPage.Item.Line">
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/about_page_line</item>
    </style>

    <style name="AboutPage.Item.Card">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@drawable/about_page_card</item>
        <item name="android:elevation"
            tools:ignore="NewApi">1dp
        </item>
    </style>

    <style name="AboutPage.CardContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AboutPage.ContributorAvatar">
        <item name="android:layout_width">@dimen/about_page_avatar_size</item>
        <item name="android:layout_height">@dimen/about_page_avatar_size</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="AboutPage.ContributorName">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AboutPage.ContributorDesc">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/tertiary_text_dark</item>
    </style>

    <style name="AboutPage.LicenseTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AboutPage.LicenseHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/tertiary_text_dark</item>
    </style>

    <style name="AboutPage.BottomSheetItem">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/about_page_card_text_color</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

</resources>