<resources>

    <!-- setting theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="Christian" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--返回或更多(app:showAsAction="never")的按钮颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>

        <!--if you don't set this the background will be black when you slide.-->
        <item name="android:windowIsTranslucent">true</item>
        <!--set the right in/out animation of Activity,you can change this to yours-->
        <item name="android:windowAnimationStyle">@style/Christian.Activity</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Christian.Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_in_right</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_out_right</item>
        <item name="android:taskOpenEnterAnimation">@anim/translate_in_right</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@anim/translate_out_right</item>
        <item name="android:taskToFrontEnterAnimation">@anim/translate_in_right</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@anim/translate_out_right</item>
    </style>

    <style name="BottomNavigationActivityTheme" parent="Christian">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="ChristianToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="ChristianToolbarTheme.colorPrimary" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!--TextInputLayout-->
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="colorControlNormal">@color/gray_light</item>
    </style>

    <style name="Christian.Button.White" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/searchbox_icon_tint</item>
    </style>

    <style name="Christian.Button.colorPrimary" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Christian.Button.colorAccent" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Christian.Button.colorGrayDark" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/gray_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Christian.Search" parent="Christian">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="autoCompleteTextViewStyle">@style/Christian.AutoCompleteTextView</item>
        <item name="searchViewStyle">@style/Christian.SearchView</item>
        <item name="colorControlNormal">@color/gray_light</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="Christian.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
    </style>

    <style name="Christian.AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColorHint">@color/gray_light</item>
        <!-- If set to @null the cursor will be displayed using android:textColor -->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="SearchViewTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/searchbox_text_color</item>
        <item name="colorControlNormal">@color/searchbox_icon_tint</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
</resources>
