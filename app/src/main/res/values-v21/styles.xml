<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Christian" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <!--返回或更多(app:showAsAction="never")的按钮颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- 设置自定义水波纹颜色(包括了listivew的item按下颜色) -->
        <!--<item name="android:colorControlHighlight">@color/colorPrimary</item>-->
        <!--if you don't set this the background will be black when you slide.-->
        <item name="android:windowIsTranslucent">true</item>
        <!--set the right in/out animation of Activity,you can change this to yours-->
        <item name="android:windowAnimationStyle">@style/Christian.Activity</item>

    </style>

    <style name="ChristianToolbarTheme.colorPrimary" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--TextInputLayout-->
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="colorControlNormal">@color/gray_dark</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="Christian.Button.White" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/searchbox_hint_text_color</item>
        <item name="colorControlHighlight">#E2E2E2</item>
    </style>

    <style name="Christian.Button.colorPrimary" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="Christian.Button.colorAccent" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="Christian.Button.colorGrayDark" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/gray_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>
</resources>