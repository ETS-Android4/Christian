<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Christian" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <!--返回或更多(app:showAsAction="never")的按钮颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- 设置自定义水波纹颜色(包括了listivew的item按下颜色) -->
        <!--<item name="android:colorControlHighlight">@color/colorPrimary</item>-->
        <!--if you don't set this the background will be black when you slide.-->
        <item name="android:windowIsTranslucent">true</item>
        <!--set the right in/out animation of Activity,you can change this to yours-->
        <item name="android:windowAnimationStyle">@style/Christian.Activity</item>
        <!--TextInputLayout-->
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="colorControlNormal">@color/gray_dark</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="Christian.Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_in_right</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_out_right</item>
        <item name="android:taskOpenEnterAnimation">@anim/translate_in_right</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@anim/translate_out_right</item>
        <item name="android:taskToFrontEnterAnimation">@anim/translate_in_right</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@anim/translate_out_right</item>
    </style>

    <style name="BottomNavigationActivityTheme" parent="Christian">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Christian.Button.White" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/searchbox_hint_text_color</item>
        <item name="android:colorControlHighlight">#DDDDDD</item>
    </style>

    <style name="Christian.Button.colorPrimary" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorControlHighlight">@color/white</item>
    </style>
</resources>